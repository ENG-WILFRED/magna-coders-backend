// ==================== MAGNA CONTRACTS ====================

model contracts {
  id            String    @id @db.Uuid
  client_id     String    @db.Uuid
  developer_id  String?   @db.Uuid
  title         String    @db.VarChar
  description   String?   @db.Text
  currency      String    @default("KES") @db.VarChar
  total_amount  Decimal   @db.Decimal(12, 2)
  status        String    @default("DRAFT") @db.VarChar
  funding_mode  String    @default("NEXT_MILESTONE_REQUIRED") @db.VarChar
  start_at      DateTime? @db.Timestamptz(6)
  created_at    DateTime  @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updated_at    DateTime  @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  terms_version String?   @db.VarChar
  metadata      Json?

  client               users                  @relation("ContractClient", fields: [client_id], references: [id], onDelete: Cascade)
  developer            users?                 @relation("ContractDeveloper", fields: [developer_id], references: [id], onDelete: SetNull)
  milestones           milestones[]
  escrow_account       escrow_accounts?
  escrow_transactions  escrow_transactions[]
  progress_submissions progress_submissions[]
  change_requests      change_requests[]
  disputes             disputes[]
  activity_logs        activity_logs[]
  platform_fees        platform_fees[]

  @@index([client_id])
  @@index([developer_id])
  @@index([status])
  @@map("contracts")
}

model milestones {
  id                  String    @id @db.Uuid
  contract_id         String    @db.Uuid
  title               String    @db.VarChar
  description         String?   @db.Text
  acceptance_criteria Json?
  amount              Decimal   @db.Decimal(12, 2)
  due_at              DateTime? @db.Timestamptz(6)
  order_index         Int       @default(0)
  status              String    @default("NOT_STARTED") @db.VarChar
  created_at          DateTime  @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updated_at          DateTime  @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)

  contract             contracts              @relation(fields: [contract_id], references: [id], onDelete: Cascade)
  progress_submissions progress_submissions[]
  milestone_reviews    milestone_reviews[]
  disputes             disputes[]

  @@index([contract_id])
  @@index([status])
  @@map("milestones")
}

model escrow_accounts {
  contract_id    String   @id @db.Uuid
  funded_total   Decimal  @default(0.00) @db.Decimal(12, 2)
  released_total Decimal  @default(0.00) @db.Decimal(12, 2)
  refunded_total Decimal  @default(0.00) @db.Decimal(12, 2)
  status         String   @default("EMPTY") @db.VarChar
  created_at     DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updated_at     DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)

  contract contracts @relation(fields: [contract_id], references: [id], onDelete: Cascade)

  @@map("escrow_accounts")
}

model escrow_transactions {
  id                 String   @id @db.Uuid
  contract_id        String   @db.Uuid
  type               String   @db.VarChar
  amount             Decimal  @db.Decimal(12, 2)
  from_id            String?  @db.Uuid
  to_id              String?  @db.Uuid
  provider_reference String?  @db.VarChar
  status             String   @default("PENDING") @db.VarChar
  idempotency_key    String?  @unique @db.VarChar
  created_at         DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)

  contract contracts @relation(fields: [contract_id], references: [id], onDelete: Cascade)

  @@index([contract_id])
  @@index([type])
  @@index([status])
  @@map("escrow_transactions")
}

model progress_submissions {
  id             String   @id @db.Uuid
  contract_id    String   @db.Uuid
  milestone_id   String   @db.Uuid
  submitted_by   String   @db.Uuid
  summary        String?  @db.Text
  evidence_items Json?
  created_at     DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updated_at     DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)

  contract  contracts  @relation(fields: [contract_id], references: [id], onDelete: Cascade)
  milestone milestones @relation(fields: [milestone_id], references: [id], onDelete: Cascade)
  submitter users      @relation(fields: [submitted_by], references: [id], onDelete: Cascade)

  @@index([contract_id])
  @@index([milestone_id])
  @@map("progress_submissions")
}

model milestone_reviews {
  id           String   @id @db.Uuid
  milestone_id String   @db.Uuid
  reviewer_id  String   @db.Uuid
  decision     String   @db.VarChar
  reason_code  String?  @db.VarChar
  comments     String?  @db.Text
  created_at   DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)

  milestone milestones @relation(fields: [milestone_id], references: [id], onDelete: Cascade)
  reviewer  users      @relation(fields: [reviewer_id], references: [id], onDelete: Cascade)

  @@index([milestone_id])
  @@map("milestone_reviews")
}

model change_requests {
  id          String   @id @db.Uuid
  contract_id String   @db.Uuid
  proposed_by String   @db.Uuid
  type        String   @db.VarChar
  changes     Json
  status      String   @default("PENDING") @db.VarChar
  created_at  DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updated_at  DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)

  contract contracts @relation(fields: [contract_id], references: [id], onDelete: Cascade)
  proposer users     @relation(fields: [proposed_by], references: [id], onDelete: Cascade)

  @@index([contract_id])
  @@index([status])
  @@map("change_requests")
}

model disputes {
  id           String   @id @db.Uuid
  contract_id  String   @db.Uuid
  milestone_id String?  @db.Uuid
  opened_by    String   @db.Uuid
  reason       String?  @db.Text
  status       String   @default("OPEN") @db.VarChar
  resolution   String?  @db.VarChar
  admin_id     String?  @db.Uuid
  created_at   DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updated_at   DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)

  contract  contracts   @relation(fields: [contract_id], references: [id], onDelete: Cascade)
  milestone milestones? @relation(fields: [milestone_id], references: [id], onDelete: SetNull)
  opener    users       @relation(fields: [opened_by], references: [id], onDelete: Cascade)

  @@index([contract_id])
  @@index([status])
  @@map("disputes")
}

model activity_logs {
  id          String   @id @db.Uuid
  contract_id String   @db.Uuid
  actor_id    String?  @db.Uuid
  action_type String   @db.VarChar
  payload     Json?
  created_at  DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)

